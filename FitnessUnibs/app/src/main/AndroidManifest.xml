<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unibs.ing.fp.fitnessunibs">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoapp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PaginaIniziale"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SceltaLingua"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"/>
        <activity android:name=".InserimentoDati"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2"/>
        <activity android:name=".Home"
            android:screenOrientation="portrait"/>
        <activity android:name=".Impostazioni"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home"/>
        <activity android:name=".Riconoscimenti"
            android:parentActivityName=".Home"/>
        <activity android:name=".Storico"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home" />
        <activity android:name=".Serie"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home"/>
        <activity android:name=".Playlist"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home"/>
        <activity android:name=".Statistiche"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home"/>
        <activity android:name=".Valutaci"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home"/>
        <activity android:name=".Svolgimento"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme2"></activity>
    </application>

</manifest>