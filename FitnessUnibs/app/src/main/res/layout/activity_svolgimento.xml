<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_svolgimento"
    tools:context="it.unibs.ing.fp.fitnessunibs.Svolgimento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/lineaSotto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">

                <Chronometer
                    android:id="@+id/chrono"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="287dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="26sp" />

                <Button
                    android:id="@+id/btnAiutoSvolgimento"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:background="@drawable/info"
                    android:elevation="0dp"
                    android:scaleX="0.7" />

            </LinearLayout>


            <TextView
                android:id="@+id/textDialogo1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="275dp"
                android:layout_weight="1.9"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCountdown"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/rosso"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEsercizio"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp" />


        </LinearLayout>

        <View
            android:id="@+id/lineaSotto2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="7dp"
            android:layout_weight="0.7">

            <Button
                android:id="@+id/btnPartenza"
                style="@style/bottoniGenerali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1.3"
                android:text="@string/partenza"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnHome"
                style="@style/bottoniGenerali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="@string/home"
                android:textAlignment="center" />


            <Button
                android:id="@+id/btnAbbandona"
                style="@style/bottoniGenerali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="@string/abbandona"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
