<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="420dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        >

        <EditText
            android:id="@+id/editDialogNomePlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/rosso"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/inserireNomePlaylist"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorLink="@color/arancio"
            android:textSize="20dp"
            android:textStyle="italic" />

    </LinearLayout>


    <View
        android:id="@+id/lineaSopra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.065"
        android:background="@android:color/black"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8" />

        <TextView
            android:id="@+id/txtDialogNuovaPlaylistSerie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/serie"
            android:textAllCaps="true"
            android:textColor="@color/arancioScuro"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <TextView
            android:id="@+id/txtDialogNuovaPlaylistRip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/ripetizioniAttivita"
            android:textAllCaps="true"
            android:textColor="@color/arancioScuro"
            android:textStyle="bold" />
    </LinearLayout>



    <View
        android:id="@+id/lineaSopra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.065"
        android:background="@android:color/black"
        tools:ignore="DuplicateIds" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/rdNuovaPlayAddominali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="@string/addominali"
            android:textAllCaps="true"
            android:textColor="@color/arancio" />

        <Spinner
            android:id="@+id/etxtNuovaPlayNumeroSerieAddominali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:id="@+id/txtDialogNuovaPlayXAddominali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal"
            android:text="X"
            android:textColor="@color/arancio"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/etxtNuovaPlayRipetizioniAddominali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center_vertical|center_horizontal"/>

    </LinearLayout>

    <View
        android:id="@+id/lineaSopra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@android:color/black"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/rdNuovaPlayFlessioni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/flessioni"
            android:textAllCaps="true"
            android:textColor="@color/arancio" />

        <Spinner
            android:id="@+id/etxtNuovaPlayNumeroSerieFlessioni"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:id="@+id/txtDialogNuovaPlayXFlessioni"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal"
            android:text="X"
            android:textColor="@color/arancio"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/etxtNuovaPlayRipetizioniFlessioni"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>
    <View
        android:id="@+id/lineaSopra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@android:color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/rdNuovaPlaySquat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="@string/squat"
            android:textAllCaps="true"
            android:textColor="@color/arancio" />

        <Spinner
            android:id="@+id/etxtNuovaPlayNumeroSerieSquat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:id="@+id/txtDialogNuovaPlayXSquat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal"
            android:text="X"
            android:textStyle="bold"
            android:textColor="@color/arancio"/>

        <Spinner
            android:id="@+id/etxtNuovaPlayRipetizioniSquat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>
    <View
        android:id="@+id/lineaSopra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="@android:color/black"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNuovaPlaySalva"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            style="@style/dialogo"
            android:text="@string/salva" />

        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>