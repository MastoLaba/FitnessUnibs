<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutDatiFissi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/dataStoricoList"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/nano"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textColor="@color/arancio" />

    <TextView
        android:id="@+id/nomeEsercizioStoricoList"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:textColor="@color/arancio" />

    <TextView
        android:id="@+id/ripetizioniStoricoList"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textColor="@color/arancio" />

    <TextView
        android:id="@+id/durataStoricoList"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textColor="@color/arancio" />

</LinearLayout>