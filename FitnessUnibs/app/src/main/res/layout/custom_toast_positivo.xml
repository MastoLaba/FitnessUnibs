<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutToastSalvataggioPositivo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgToastSalvataggioPositivo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:contentDescription="@string/immagine"
        app:srcCompat="@android:drawable/checkbox_on_background" />

    <TextView
        android:id="@+id/txtToastSalvataggioPositivo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="@string/salvataggioRiuscito"
        android:textColor="@color/bianco"
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>